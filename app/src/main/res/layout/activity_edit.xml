<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_background"
    tools:context=".Edit">

    <TableLayout
        android:id="@+id/infoTable"
        android:layout_width="368dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/ic_chenar_planta">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:id="@+id/pictureNameAndDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/plantProfilePicture"
                android:layout_width="115dp"
                android:layout_height="69dp"
                app:srcCompat="@drawable/planta1"
                tools:srcCompat="@drawable/planta1" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="227dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image29"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_nume_planta" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_chenar_planta"
                    android:contentDescription="TODO" />
            </LinearLayout>

        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/table1"
        android:layout_width="382dp"
        android:layout_height="124dp"
        android:layout_below="@+id/infoTable"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_chenar_planta"
        android:visibility="visible"
        tools:ignore="UnknownId"
        tools:visibility="visible">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <SeekBar
                android:id="@+id/quantityInput"
                style="@android:style/Widget.Material.SeekBar"
                android:layout_width="149dp"
                android:layout_height="29dp"
                android:layout_margin="10dp"
                android:max="20"
                android:progressDrawable="@drawable/seekbar_style"
                android:splitTrack="false"
                android:thumb="@drawable/custom_thumb" />

            <TextView
                android:id="@+id/quantityLable"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="Quantity:"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/quantityOutput"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_margin="10dp"
                android:layout_weight="0.33"
                android:text="1"
                android:visibility="visible"
                tools:visibility="visible" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:visibility="visible"
            tools:visibility="visible">

            <SeekBar
                android:id="@+id/repeatInput"
                style="@android:style/Widget.Material.SeekBar"
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:max="20"
                android:progressDrawable="@drawable/seekbar_style"
                android:splitTrack="false"
                android:thumb="@drawable/custom_thumb" />

            <TextView
                android:id="@+id/reprtitionLable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Repetition:" />

            <TextView
                android:id="@+id/repetitionOutput"
                android:layout_width="19dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="1"
                android:visibility="visible"
                tools:visibility="visible" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/infoTable"
        android:layout_alignBottom="@+id/infoTable"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="53dp"
        android:text="Plant" />

    <Switch
        android:id="@+id/toDeafult"
        android:layout_width="179dp"
        android:layout_height="43dp"
        android:layout_below="@+id/table1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="116dp"
        android:layout_marginRight="116dp"
        android:background="@drawable/ic_chenar_planta"
        android:text="Deafault" />

    <TextView
        android:id="@+id/RBPConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toDeafult"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="202dp"
        android:text="  " />

    <LinearLayout
        android:id="@+id/saveCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RBPConnection"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/cancelChanges"
            android:layout_width="122dp"
            android:layout_height="48dp"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="41dp"
            android:layout_marginBottom="58dp"
            android:layout_weight="0.5"
            android:background="@drawable/ic_chenar_planta"
            android:text="Cancel" />

        <Button
            android:id="@+id/saveChanges"
            android:layout_width="122dp"
            android:layout_height="48dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/ic_chenar_planta"
            android:text="Save" />
    </LinearLayout>

</RelativeLayout>