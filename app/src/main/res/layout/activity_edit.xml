<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_background"
    tools:context=".Edit">

    <TableLayout
        android:id="@+id/infoTable"
        android:layout_width="368dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/ic_chenar_planta">

        <TableRow
            android:id="@+id/pictureNameAndDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/plantProfilePicture"
                android:layout_width="115dp"
                android:layout_height="69dp"
                tools:srcCompat="@color/colorAccent" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="227dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image29"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_nume_planta" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_chenar_planta"
                    android:contentDescription="TODO" />
            </LinearLayout>

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/cancelChanges"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="41dp"
        android:layout_marginBottom="58dp"
        android:background="@drawable/ic_chenar_planta"
        android:text="Cancel" />

    <TableLayout
        android:id="@+id/table1"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_above="@+id/toDeafult"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="69dp"
        android:background="@drawable/ic_chenar_planta"
        android:visibility="visible"
        tools:ignore="UnknownId"
        tools:visibility="visible">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            tools:visibility="visible">

            <SeekBar
                android:id="@+id/quantityInput"
                style="@android:style/Widget.Material.SeekBar"
                android:layout_width="149dp"
                android:layout_height="29dp"
                android:layout_margin="10dp"
                android:max="20"
                android:progressDrawable="@drawable/seekbar_style"
                android:splitTrack="false"
                android:thumb="@drawable/custom_thumb" />

            <TextView
                android:id="@+id/reprtitionLable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Repetition:" />

            <TextView
                android:id="@+id/repetitionOutput"
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/table2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_above="@+id/table1"
        android:layout_below="@+id/infoTable"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="74dp"
        android:background="@drawable/ic_chenar_planta"
        android:visibility="visible"
        tools:visibility="visible">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <SeekBar
                android:id="@+id/repeatInput"
                style="@android:style/Widget.Material.SeekBar"
                android:layout_width="149dp"
                android:layout_height="29dp"
                android:layout_margin="10dp"
                android:max="20"
                android:progressDrawable="@drawable/seekbar_style"
                android:splitTrack="false"
                android:thumb="@drawable/custom_thumb" />

            <TextView
                android:id="@+id/quantityLable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Quantity:"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/quantityOutput"
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/infoTable"
        android:layout_alignBottom="@+id/infoTable"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="53dp"
        android:text="TextView" />

    <Switch
        android:id="@+id/toDeafult"
        android:layout_width="179dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="116dp"
        android:layout_marginRight="116dp"
        android:layout_marginBottom="166dp"
        android:background="@drawable/ic_chenar_planta"
        android:text="Deafault" />

    <Button
        android:id="@+id/saveChanges"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginBottom="58dp"
        android:background="@drawable/ic_chenar_planta"
        android:text="Save" />

    <TextView
        android:id="@+id/RBPConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="202dp"
        android:layout_marginRight="202dp"
        android:layout_marginBottom="131dp"
        android:text="  " />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>